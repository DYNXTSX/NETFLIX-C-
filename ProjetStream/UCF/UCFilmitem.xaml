<UserControl x:Class="ProjetStream.UCF.UCFilmitem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetStream.UCF"
             mc:Ignorable="d"
             Background="#564d4d"             
            >
    <Grid Height="100" Width="141">
        <Rectangle Cursor="Hand" Fill="Transparent" Panel.ZIndex="10"/>
        <TextBlock x:Name="Nom_film"  TextWrapping="Wrap" TextAlignment="Center" Text="{Binding Titre}" Style="{StaticResource textMiniature}" Panel.ZIndex="5">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2"  RenderingBias="Performance"/>
            </TextBlock.Effect>
        </TextBlock>
        <Image Source="{Binding LienImage}" Stretch="UniformToFill"/>
        

              

    </Grid>
</UserControl>
